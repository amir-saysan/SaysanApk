@page "{SessionId}"
@model SaysanPwa.Api.Pages.ReceiptSheet.PosMachine.AddPosReceiveModel
@{
    Layout = "";
}

<form method="post" id="PosMachine-form">
    <div class="form-group">
        <label>حساب بانک: </label>
        <select class="form-control" asp-for="CardReader.BankAccountId">
            <option value="-1">یک حساب بانکی را انتخاب نمایید</option>
            @foreach(var item in Model.BackAccounts)
            {
                <option value="@item.Key">@item.Value</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>مبلغ: </label>
        <input asp-for="CardReader.Price" class="form-control" value="0"/>
    </div>

    <div class="form-group">
        <label>شماره پیگیری: </label>
        <input asp-for="CardReader.IssueTracking" class="form-control"/>
    </div>

    <div class="form-group">
        <label>سریال تراکنش: </label>
        <input asp-for="CardReader.TransactionSeries" class="form-control"/>
    </div>

    <div class="form-group">
        <label>شرح: </label>
        <textarea asp-for="CardReader.Description" class="form-control">
        </textarea>
    </div>

    <button type="button" class="btn btn-success" onclick="SubmitReceiveFromPosMachine()">ثبت دریافت از کارتخوان</button>
</form>
