@page
@model SaysanPwa.Api.Pages.Login.IndexModel
@{
    ViewBag.Title = "ورود به سیستم";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">ورود</h4>
                </div>
                <div class="card-body">
                    <form asp-page="/Login/Index" method="post">
                        <!-- Username Field -->
                        <div class="form-group">
                            <label>نام کاربری:</label>
                            <input class="form-control" asp-for="Input.Username" id="username" />
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label>رمز عبور:</label>
                            <input class="form-control" asp-for="Input.Password">
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">مرا بخاطر بسپار</label>
                        </div>

                        <div class="text-danger" asp-validation-summary="All"></div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary btn-block">ورود</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Script
{
    <script>
        document.getElementById("username").focus();
    </script>
}