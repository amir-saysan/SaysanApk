        $("#branchRegionSelect").change(function () {
            var regionid = $('#branchRegionSelect').find(":selected").val();
            $.getJSON(`@configuration["BasePath"]/Location/GetCities?regionId=${regionid}`, function (data) {
                var select = $('#branchCitySelect');
