                        <textarea class="form-control" id="exampleFormControlTextarea1" value="@Model.PartnerEditModel.Address_Asli" asp-for="@Model.PartnerEditModel.Address_Asli"></textarea>
                    </div>

                    <div class="col-sm-6">
