@page
@using Microsoft.AspNetCore.Authentication;
@using SaysanPwa.Application.Utilities.DateAndTime;
@using System.Security.Claims;
@model SaysanPwa.Api.Pages.User.ProfileModel
@{
    ViewBag.Title = "پزوفایل کاربری";
    var user = await HttpContext.AuthenticateAsync();
}

<div class="container md-5">
    <div class="row justify-content-center">
        <div class="row">
            <div class="card">
                <div class="card-header bg-info">
                    <h2>پروفایل کاربری</h2>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped table-hover m-2">
                        <tbody>
                            <tr><th>زمان ورود:</th><td>@(user.Properties.IssuedUtc.Value.LocalDateTime.ToPersianData())</td></tr>
                            <tr><th>اتمام:</th><td>@user.Properties.ExpiresUtc.Value.LocalDateTime.ToPersianData()</td></tr>
                            <tr><th>نام کاربری:</th><td>@user.Principal.FindFirstValue(ClaimTypes.Name)</td></tr>
                            <tr><th>سطح دسترسی:</th><td>@user.Principal.FindFirstValue(ClaimTypes.Role)</td></tr>
                            <tr><th>وضعیت:</th><td>@user.Principal.FindFirstValue("State")</td></tr>
                            <tr><th>کد سیستمی:</th><td>@user.Principal.FindFirstValue(ClaimTypes.NameIdentifier)</td></tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <button class="btn btn-danger" onclick="Logout()">خروج از حساب</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css
{
    <script src="/lib/sweet-alert/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="/lib/sweet-alert/sweetalert2.min.css">
}

@section Script
{
    <script src="/lib/sweet-alert/sweetalert2.all.min.js"></script>
    <script>
        function Logout()
        {
            Swal.fire({
                title: "خروج از حساب",
                text: "آیا از انجام عملیات اطمینان دارید.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "بله، مطمئنم",
                cancellButtonText: "خیر"
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = "/logout";
                }
            });
        }
    </script>
}